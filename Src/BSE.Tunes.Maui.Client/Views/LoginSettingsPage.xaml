<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:BSE.Tunes.Maui.Client.Resources.Strings"
             x:Class="BSE.Tunes.Maui.Client.Views.LoginSettingsPage"
             Title="{x:Static strings:AppResources.LoginSettingsPage_Title}">
    
    <TableView Intent="Settings">
        <TableRoot>
            <TableSection Title="{x:Static strings:AppResources.LoginSettingsPage_SectionAccount_Title}">
                <TextCell Text="{x:Static strings:AppResources.LoginSettingsPage_SectionAccount_Description_Text}"
                      Detail="{Binding UserName}"/>
                <ViewCell>
                    <Button Text="{x:Static strings:AppResources.LoginSettingsPage_ButtonDelete_Text}"
                        Command="{Binding DeleteCommand}"
                        Style="{StaticResource SubmitActionButtonStyle}"/>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>