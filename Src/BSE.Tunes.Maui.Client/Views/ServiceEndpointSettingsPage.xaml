<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:BSE.Tunes.Maui.Client.Resources.Strings"
             xmlns:controls="clr-namespace:BSE.Tunes.Maui.Client.Controls"
             x:Class="BSE.Tunes.Maui.Client.Views.ServiceEndpointSettingsPage"
             Title="{x:Static strings:AppResources.ServiceEndpointSettingsPage_Title}">

    <TableView Intent="Form" HasUnevenRows="True" x:Name="settingsPage">
        <TableRoot>
            <TableSection>
                <controls:HeaderedTextCell Title="{x:Static strings:AppResources.ServiceEndpointSettingsPage_SectionWebserver_Title}" TitleColor="White"
                                           Text="{x:Static strings:AppResources.ServiceEndpointSettingsPage_SectionWebserver_Description_Text}" TextColor="White"
                                           Detail="{Binding BindingContext.ServiceEndPoint, Source={x:Reference settingsPage}}"
                                           IsEnabled="False"/>
                <ViewCell>
                    <Button Text="{x:Static strings:AppResources.ServiceEndpointSettingsPage_ButtonDelete_Text}"
                            Command="{Binding DeleteCommand}"
                            Margin="20,10"/>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>

</ContentPage>