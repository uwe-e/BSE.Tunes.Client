<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:services="clr-namespace:BSE.Tunes.Maui.Client.Services"
             x:Class="BSE.Tunes.Maui.Client.Views.SplashPage"
             Title="SplashPage">
    <Grid HeightRequest="50">
        <toolkit:MediaElement x:Name="MediaElement"
                              IsVisible="False" services:MediaService.RegisterAsMediaService="True"
                              ShouldShowPlaybackControls="False" />
        <ActivityIndicator IsRunning="True" Color ="{AppThemeBinding Light={StaticResource SecondaryLabelColor}, Dark={StaticResource SecondaryDarkLabelColor}}"/>
    </Grid>
</ContentPage>