<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:services="clr-namespace:BSE.Tunes.Maui.Client.Services"
             x:Class="BSE.Tunes.Maui.Client.Views.SplashPage"
             Title="SplashPage">
    <Grid HeightRequest="256">
        <!--
            On Android the sizing of an image on the splashscreen fails.
            This is the reason why this logo image is smaller
        -->
        <Image Source="logo.png"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HeightRequest="{OnPlatform 256, Android=192}"
               WidthRequest="{OnPlatform 256, Android=192}"/>

        <Grid HeightRequest="40">
            <!-- The MediaElement is now located in AudioPlayer ContentView Control where it belongs-->
            <!--<toolkit:MediaElement x:Name="MediaElement"
                              IsVisible="False" services:MediaService.RegisterAsMediaService="True"
                              ShouldShowPlaybackControls="False" />-->
            <ActivityIndicator IsRunning="True"/>
        </Grid>
    </Grid>
</ContentPage>