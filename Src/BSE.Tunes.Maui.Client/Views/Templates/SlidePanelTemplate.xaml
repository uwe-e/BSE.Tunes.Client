<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BSE.Tunes.Maui.Client.Views.Templates.SlidePanelTemplate">
    <Grid>

        <Image Aspect="AspectFill" Source="{Binding ImageSource}" />

        <StackLayout BackgroundColor="#A0000000" VerticalOptions="End" HorizontalOptions="FillAndExpand">
            <Label HorizontalTextAlignment="Center"
                   Text="{Binding Title}"
                   TextColor="White"
                   LineBreakMode="TailTruncation"/>
            <Label HorizontalTextAlignment="Center" 
                   Margin="0,-5,0,0"
                   FontSize="13"
                   Text="{Binding SubTitle}"
                   TextColor="White"
                   LineBreakMode="TailTruncation"/>
        </StackLayout>
    </Grid>
</ContentView>
